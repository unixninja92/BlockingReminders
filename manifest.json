{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "0.0.2",
  "default_locale": "en",

  "icons": { "48": "icon48.png",
          "128": "icon128.png" },

  "browser_action": {
    "default_title": "__MSG_extName__",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["lib/blocker.js",
      "lib/background.js"]
  },

  "permissions": [
    "tabs",
    "storage",
    "cookies",
    "*://*/*"
    ]
}
